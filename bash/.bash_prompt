#!/bin/bash

# Format: \e[38;5;Nm  where N is 0-255
# 240-245 are various greys
# 27, 33, 39 are various blues
# 202-214 are oranges/yellows

# Standardizing colors that work on both light/dark
FIXED_GREY="\[\e[38;5;244m\]"   # Visible on almost anything
FIXED_BLUE="\[\e[38;5;33m\]"    # Deep sky blue
FIXED_ORANGE="\[\e[38;5;208m\]" # Vibrant orange
FIXED_CYAN="\[\e[38;5;39m\]"    # Bright cyan
RESET="\[\e[0m\]"

# Mapping your variables
LINE_COLOR=${FIXED_GREY}
USER_COLOR=${FIXED_BLUE}
HOST_COLOR=${FIXED_CYAN}
PATH_COLOR=${FIXED_GREY}

export PROMPT_DIRTRIM=3

if [[ -n "$SSH_CONNECTION" || -n "$SSH_CLIENT" || -n "$SSH_TTY" ]]; then
    AT_COLOR="${FIXED_ORANGE}"
else
    AT_COLOR="$LINE_COLOR"
fi

PROMPT_FORMAT="${LINE_COLOR}┌──(${USER_COLOR}\u${AT_COLOR}@${HOST_COLOR}\h${LINE_COLOR})-[${PATH_COLOR}\w${LINE_COLOR}]\n${LINE_COLOR}└─\$${RESET} "

PS1="$PROMPT_FORMAT"

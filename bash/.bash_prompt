#!/bin/bash

BOLD_BLACK="\[\e[1;30m\]"
BOLD_RED="\[\e[1;31m\]"
BOLD_GREEN="\[\e[1;32m\]"
BOLD_YELLOW="\[\e[1;33m\]"
BOLD_BLUE="\[\e[1;34m\]"
BOLD_MAGENTA="\[\e[1;35m\]"
BOLD_CYAN="\[\e[1;36m\]"
BOLD_WHITE="\[\e[1;37m\]"
RESET="\[\e[0m\]"

LINE_COLOR=${BOLD_BLUE}
USER_COLOR=${BOLD_WHITE}
HOST_COLOR=${BOLD_CYAN}
PATH_COLOR=${BOLD_WHITE}

export PROMPT_DIRTRIM=3

if [[ -n "$SSH_CONNECTION" || -n "$SSH_CLIENT" || -n "$SSH_TTY" ]]; then
    AT_COLOR="$BOLD_YELLOW"
else
    AT_COLOR="$LINE_COLOR"
fi

# Components:
#   \u      = username
#   \h      = hostname
#   \w      = working directory
#   \n      = newline
PROMPT_FORMAT="${LINE_COLOR}┌──(${USER_COLOR}\u${AT_COLOR}@${HOST_COLOR}\h${LINE_COLOR})-[${PATH_COLOR}\w${LINE_COLOR}]\n${LINE_COLOR}└─\$${RESET} "

PS1="$PROMPT_FORMAT"

# Default settings for all hosts
Host *
    ForwardX11 yes
    TCPKeepAlive yes

# Connection to xgate
# Forwards ssh and nx to ymir-ln (164.54.104.7)
Host xgate
    HostName xgate.xray.aps.anl.gov
    User nmarks
    IdentityFile ~/.ssh/id_ed25519
    Compression yes
    LocalForward 40001 ymir-ln.xray.aps.anl.gov:22
    LocalForward 40002 discovery.xray.aps.anl.gov:22
    LocalForward 44000 ymir-ln.xray.aps.anl.gov:4000

# not working?
Host ymir-ln
    HostName 127.0.0.1
    User nmarks
    Port 40001

Host discovery
    HostName 127.0.0.1
    User nmarks
    Port 40002

